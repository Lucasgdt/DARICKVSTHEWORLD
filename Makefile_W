CC=gcc
CFLAGS=-Wall
SDL_DIR=${HOME}/SDL2
SDLLIB_DIR=${SDL_DIR}/lib
SDLINC_DIR=${SDL_DIR}/include


LIBS=-L${SDLLIB_DIR} -lSDL2 -lSDL2_ttf -lSDL2_image -lm
INCLUDES=-I${SDLINC_DIR} 
OBJ=menu.o move.o main.o joueur.o environnement.o camera.o mob.o outil.o inventaire.o personnage.o action.o


all: jeu

jeu: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o jeu ${LIBS} ${INCLUDES}

menu.o: menu.c
	$(CC) $(CFLAGS) -c menu.c ${LIBS} ${INCLUDES}

move.o: move.c
	$(CC) $(CFLAGS) -c move.c ${LIBS} ${INCLUDES}

inventaire.o: inventaire.c
	$(CC) $(CFLAGS) -c inventaire.c ${LIBS} ${INCLUDES}

main.o: main.c
	$(CC) $(CFLAGS) -c main.c ${LIBS} ${INCLUDES}

personnage.o : personnage.c
	$(CC) $(CFLAGS) -c personnage.c ${LIBS} ${INCLUDES}

joueur.o : joueur.c
	$(CC) $(CFLAGS) -c joueur.c ${LIBS} ${INCLUDES}

environnement.o: environnement.c
	$(CC) $(CFLAGS) -c environnement.c $(INCLUDES)

camera.o: camera.c
	$(CC) $(CFLAGS)  -c camera.c $(INCLUDES)

mob.o : mob.c
	$(CC) $(CFLAGS)  -c mob.c $(INCLUDES)

outil.o : outil.c
	$(CC) $(CFLAGS) -c outil.c $(INCLUDES)

inventaire.o : inventaire.c
	$(CC) $(CFLAGS) -c inventaire.c $(INCLUDES)

personnage.o : personnage.c
	$(CC) $(CFLAGS) -c personnage.c $(INCLUDES)

action.o : action.c
	$(CC) $(CFLAGS) -c action.c $(INCLUDES)



clean:
	rm -f *.o jeu
	rm menu inventaire test tqt
