CC=gcc
CFLAGS=-Wall
SDL_DIR=${HOME}/SDL2
SDLLIB_DIR=${SDL_DIR}/lib
SDLINC_DIR=${SDL_DIR}/include


LIBS=-L${SDLLIB_DIR} -lSDL2 -lSDL2_ttf -lSDL2_image
INCLUDES=-I${SDLINC_DIR} 

OBJ=menu.o move.o main.o joueur.o environnement.o camera.o mob.o outil.o

jeu: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o jeu ${LIBS} ${INCLUDES}

menu.o: menu.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c menu.c 

move.o: move.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c move.c


main.o: main.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c main.c

joueur.o: joueur.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c joueur.c

environnement.o: environnement.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c environnement.c

camera.o: camera.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c camera.c

mob.o : mob.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c mob.c

outil.o : outil.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c outil.c

clean:
	rm -f *.o jeu
	rm menu inventaire test tqt
